{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Snapboard",
  "version": "0.1.0",
  "identifier": "SnapBoard",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "SnapBoard",
        "visible": false
      },
      {
        "label": "panel",
        "title": "SnapBoard",
        "visible": false,
        "decorations": false,
        "transparent": true,
        "resizable": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "width": 380,
        "height": 620,
        "url": "/#/panel"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}